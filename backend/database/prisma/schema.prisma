generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id Int @id @default(autoincrement())
  name String @unique
  price Int 
  location String
  bookings Booking[]
}

model Booking {
  id Int @id @default(autoincrement())
  activityId Int
  activity Activity @relation(references: [id], fields: [activityId])
  name String
  email String
  date String
}